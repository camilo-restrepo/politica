db.createCollection("facebookPages")
db.facebookPages.createIndex({facebookId: 1, likes:1}, {unique: true})

db.createCollection("facebookComments")
db.facebookComments.createIndex({facebookId: 1, timestamp:1}, {unique: true})

db.createCollection("facebookLikes")
db.facebookLikes.createIndex({facebookId: 1, user:1, comment: 1, post: 1}, {unique: true})

db.createCollection("facebookPosts")
db.facebookPosts.createIndex({facebookId: 1, commentsCount: 1, likesCount: 1, sharesCount: 1}, {unique: true})

db.createCollection("facebookUsers")
